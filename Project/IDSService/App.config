<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <appSettings>
    <add key="IDSServiceUser" value="IDSService" />
    <add key="WCFServiceUser" value="WCFService" />
  </appSettings>

  <system.serviceModel>
    <bindings>
      <netTcpBinding>
        <binding name="IDSService_Binding">
          <security mode="Transport">
            <transport clientCredentialType="Windows"
                       protectionLevel="EncryptAndSign" />
          </security>
        </binding>
      </netTcpBinding>
    </bindings>

    <behaviors>
      <serviceBehaviors>
        <behavior name="IDSService_Behavior">
          <serviceCredentials>
            <windowsAuthentication allowAnonymousLogons="False"/>
          </serviceCredentials>
          <serviceDebug includeExceptionDetailInFaults="True"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>

    <services>
      <service name="IDSService.IDSService"
               behaviorConfiguration="IDSService_Behavior">
        <endpoint address="net.tcp://localhost:9998/IDSService"
                  binding="netTcpBinding"
                  bindingConfiguration="IDSService_Binding"
                  contract="IDSServiceCommon.IIDSService"
                  name="IDSService_Endpoint" />
      </service>
    </services>
  </system.serviceModel>
</configuration>